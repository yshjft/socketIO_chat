                                <% } else { %>
                                    공개방
                                <% } %>
                            </td>
                            <td>
                                <%=rooms[i].max%>
                            </td>
                            <td>
                                <%=rooms[i].owner%>
                            </td>
                            <td>
                                <% if(rooms[i].password) { %>
                                    <button id='enter' data-password='true' data-id='<%=rooms[i].id%>'>
                                        입장
                                    </button>
                                <% } else { %>
                                    <button id='enter' data-password='false' data-id='<%=rooms[i].id%>'>
                                        입장
                                    </button>
                                <% } %>
                                
                            </td>
                        </tr>
